{  
  "ts-node": { "files": true },
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true, 
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@helpers/*": ["helpers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@core/*": ["core/*"],
      "@database/*": ["database/*"]
    },
    "typeRoots": ["src/types/**/*", "node_modules/@types/**/*"],
  },
}